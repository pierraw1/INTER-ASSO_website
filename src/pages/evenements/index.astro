// src/pages/evenements/index.astro
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';
import { Calendar, MapPin, ArrowRight } from '@lucide/astro';

// RÃ©cupÃ©rer tous les Ã©vÃ©nements
const evenements = await getCollection('evenements');

// Filtrer les brouillons et trier par date (du plus rÃ©cent au plus ancien)
const evenementsPublies = evenements
  .filter(event => !event.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// SÃ©parer les Ã©vÃ©nements Ã  venir et passÃ©s
const now = new Date();
const evenementsAvenir = evenementsPublies.filter(event => event.data.date >= now);
const evenementsPasses = evenementsPublies.filter(event => event.data.date < now);

// Fonction pour formater la date
function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('fr-FR', {
    day: 'numeric',
    month: 'long',
    year: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  }).format(date);
}
